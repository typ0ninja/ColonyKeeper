<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hiveNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lalezar"
        android:text=":name of yard:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hive_list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lalezar"
        android:text="Hives in yard:"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hiveNameView" />


    <GridLayout
        android:id="@+id/hiveFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hive_list_label"
        tools:context=".hiveActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hive_grid_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2" />

    </GridLayout>

    <Button
        android:id="@+id/edit_yard_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Edit Yard"
        app:layout_constraintBottom_toTopOf="@id/report_button"
        app:layout_constraintEnd_toStartOf="@id/add_hive_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hiveFrameLayout"/>

    <Button
        android:id="@+id/add_hive_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Add Hive"
        app:layout_constraintBottom_toTopOf="@id/report_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_yard_button"
        app:layout_constraintTop_toBottomOf="@id/hiveFrameLayout" />

    <Button
        android:id="@+id/report_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Generate Report"
        app:layout_constraintTop_toBottomOf="@id/add_hive_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>